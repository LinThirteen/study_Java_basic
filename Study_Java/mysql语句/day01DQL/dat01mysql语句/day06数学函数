进阶四：

//---------------数学函数--------------------//


#round 四舍五入
select round(4.5);//5
select round(-1.45);//-1
select round(1.456,2);//1.56(小数点后保持2位)


#ceil 向上取整
select ceil(1.02);//2

#floor 向下取整,返回<=该参数的最大整数
select floor(9.99);//9
select floor(-9.99);//-10


#truncate 截断
select truncate(1.6555,1);//1.6


#mod取余
select mod(10,3);//1
select 10%3;//1


